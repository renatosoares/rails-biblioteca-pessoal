<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>
<button id="current_books">muda</button>
<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Autores</th>
      <th>Editora</th>
      <th>Anopublica</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%  @books.each do |book| %>
      <tr>
        <td><%= book.titulo %></td>
        <td><%= book.autores %></td>
        <td><%= book.editora %></td>
        <td><%= book.anoPublica %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

